    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.0.1/main.min.js"></script>


    <script>

        $(document).ready(function () {
            var events = [];
            console.log('11111', events)
            $.ajax({
                url: '/LichKham/GetEvents',
                type: "GET",
                dataType: "JSON",
                success: function (data) {
                    $.each(data, function (i, v) {
                        events.push(
                            {
                                title: v.ChuDe,
                                description: v.MoTa,
                                start: moment(v.BatDau),
                                end: v.KetThuc != null ? moment(v.KetThuc) : null,
                                themes: v.GiaoDien,
                                is: v.LaCaNgay
                            });
                    })
                    callback(events);
                },
                error: function (error) {
                    alert('fail');
                }
            })

            function callback(events) {
                $('#calendar').fullCalendar({
                    theme: true,
                    timeFormat: 'h(:mm)a',
                    header:
                    {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'month,agendaWeek,agendaDay'
                    },

                    //defaultView: 'agendaDay',
                    editable: false,
                    events: events
                });

            }

        });

    </script>

}







